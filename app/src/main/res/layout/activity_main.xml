<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tcDangNhap"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="#f20"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_title_login" />
    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:id="@+id/etTaiKhoan"
        android:layout_below="@id/tcDangNhap"
        android:hint="@string/text_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/etMatKhau"
        android:layout_below="@id/etTaiKhoan"
        android:hint="@string/text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_below="@id/etMatKhau"
        android:id="@+id/btnDangNhap"
        android:layout_marginTop="50dp"
        android:text="@string/text_login"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:text="Tài khoản: hợp \n Mật khẩu: 123"
        android:textSize="20sp"
        android:id="@+id/textViewinfor"
        android:layout_below="@id/btnDangNhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>